{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "module": "NodeNext",
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
